<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_extended_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    <ImageView
        android:id="@+id/helpBtn"
        android:layout_width="9dp"
        android:layout_height="15dp"
        android:layout_gravity="top|right"
        android:background="@drawable/icon_help" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/input_desc_housenumber"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:text="@string/Housenumber" />
            <TextView
                android:id="@+id/input_desc_postcode"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:text="@string/Postcode" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/input_housenumber"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extended_address_editor_margin"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:housenumber"
                android:singleLine="true" >
            </EditText>
            <EditText
                android:id="@+id/input_postcode"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extended_address_editor_margin"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:postcode"
                android:singleLine="true" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/input_desc_housename"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="@string/Housename" />
            <TextView
                android:id="@+id/input_desc_city"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:text="@string/City" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/input_housename"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extended_address_editor_margin"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:housename"
                android:singleLine="true" />
            <EditText
                android:id="@+id/input_city"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extended_address_editor_margin"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:city"
                android:singleLine="true" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/input_desc_street"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:text="@string/Street" />
            <TextView
                android:id="@+id/input_desc_country"
                style="@style/ExtendedScreenTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:text="@string/Countrycode" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/input_street"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/extended_address_editor_margin"
                android:layout_marginRight="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:street"
                android:singleLine="true" />
            <EditText
                android:id="@+id/input_country"
                style="@style/ExtendedScreenField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extended_address_middle_margin"
                android:layout_weight="1"
                android:background="@drawable/textfield_multiline_activated_holo_dark"
                android:ems="10"
                android:hint="addr:country"
                android:singleLine="true" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </TableRow>
    </TableLayout>
</FrameLayout>